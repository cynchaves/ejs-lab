    <% if (item.category === 'desserts' && item.rating === 5) { %>
         <ul>
           <li> <%= item.name %> &#127775 %> </li> 
           <li> $<%= item.price %> </li>
           <li> <%= item.details %></li>
           <li> <%= item.rating %> stars </li>
         </ul>
    <% } else if (item.category === 'desserts' && item.rating !== 5) { %>
      <ul>
        <li> <%= item.name %> </li> 
        <li> $<%= item.price %> </li>
        <li> <%= item.details %></li>
        <li> <%= item.rating %> stars </li>
      </ul>
   <% } %>
    <% }) %>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> <%= category %> </title>
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <h1> <%= category %> </h1>
  <% menuItems.forEach((item) => { %>
  <% if (item.rating === 5) { %>
       <ul>
         <li> <%= item.name %> &#127775 %> </li> 
         <li> $<%= item.price %> </li>
         <li> <%= item.details %></li>
         <li> <%= item.rating %> stars </li>
       </ul>
    <% } else { %>
       <ul>
         <li> <%= item.name %> </li> 
         <li> $<%= item.price %> </li>
         <li> <%= item.details %></li>
         <li> <%= item.rating %> stars </li>
       </ul> 
    <% } %>
  <% })%>
</body>
</html>